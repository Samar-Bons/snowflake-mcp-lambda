# Environment Configuration Example
# Copy this file to .env and update values for your environment

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
SECRET_KEY=your-secret-key-here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@postgres:5432/snowflake_mcp
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=snowflake_mcp
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Snowflake Configuration (per-user)
# These are examples - actual values come from user configuration
SNOWFLAKE_ACCOUNT=your-account.region
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=your-warehouse
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=your-schema

# Gemini LLM Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Docker Configuration
COMPOSE_PROJECT_NAME=snowflake-mcp
DOCKER_BUILDKIT=1

# Production Overrides (used in prod compose)
POSTGRES_DB=snowflake_mcp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-password-here

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION_TIME=30d

# AWS Lambda Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
LAMBDA_FUNCTION_NAME=snowflake-mcp-lambda
